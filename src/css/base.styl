/**
 * Variables
 */
$root = "^[0]"

/**
 * Base elements
 */
html
    height: 100%
    overflow-x: hidden
    overflow-y: auto

body
    margin: 0
    min-height: 100%
    -webkit-text-size-adjust: 100%
    overflow-x: hidden
    overflow-y: auto
    display: flex
    flex-direction: column

a
    color: inherit
    text-decoration: none

svg
    display: block
    fill: currentColor
    pointer-events: none

input, button, textarea, select
    box-sizing: border-box
    font-family: inherit
    font-size: inherit
    box-shadow: none !important
    border-radius: 0
    -webkit-appearance: none
    outline: 0
    border: 0
    padding: 0
    margin: 0

    &[disabled]
        pointer-events: none

textarea
    resize: none

button
    cursor: pointer

p
    margin: 0

/**
 * Likely default styles
 */
.likely
    &--custom
        display: flex

    &__widget
        flex-shrink: 0
        display: flex
        align-items: center
        justify-content: center
        cursor: pointer

    &__counter
        display: none

    &__icon
        svg
            display: block